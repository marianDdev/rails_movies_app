<div class="create">
  <div class="container">
   	<%= form_for(@movie) do |f| %>  
  		<div class="field"> 
    		<%= f.label :movie %><br> 
    		<%= f.text_area :title %>
            <%= f.text_area :summary %>
            <%= f.text_area :description %>
            <%= f.text_area :img_src %>
  		</div> 
  		<div class="actions"> 
    		<%= f.submit "Create" %> 
  		</div> 
		<% end %>
  </div>
</div>
